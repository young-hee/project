<h2 class="h_title"><a class="depth" href="/display/category/{{ this.displayMenuId }}?upperMenuId={{ this.upperMenuId }}">{{ this.menuTitle }}</a></h2>
<div class="category">
	{{#each this.submenus}}
		{{#xif @index '==' ../selectedIndex}}
			<ul>
				<li><a href="/display/category/{{ this.displayMenuId }}?upperMenuId={{ ../upperMenuId }}" class="depth on">{{ this.menuTitle }} ({{ this.prodCount }})</a></li>
				{{#each this.submenus}}
					{{#xif @index '==' ../selectedIndex}}
						<li><a href="/display/category/{{ this.displayMenuId }}?upperMenuId={{ ../../upperMenuId }}" class="on">{{ this.menuTitle }} ({{ this.prodCount }})</a></li>
					{{else}}
						<li style="display: none"><a href="/display/category/{{ this.displayMenuId }}?upperMenuId={{ ../../upperMenuId }}">{{ this.menuTitle }} ({{ this.prodCount }})</a></li>
					{{/xif}}
				{{/each}}
			</ul>
			{{#xif this.submenus.length '>' 1}}
				<a href="#" class="cate_more">{{ this.menuTitle }} 전체보기</a>
			{{/xif}}
		{{/xif}}
	{{/each}}
</div>
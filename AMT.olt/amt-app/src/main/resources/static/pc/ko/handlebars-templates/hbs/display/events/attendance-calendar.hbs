<table data-date="{{ this.year }}-{{ this.month }}">
	<caption class="sr_only">calendar date table</caption>
	<colgroup>
		<col style="width:15%;" />
		<col style="width:14%;" />
		<col style="width:14%;" />
		<col style="width:14%;" />
		<col style="width:14%;" />
		<col style="width:14%;" />
		<col style="width:15%;" />
	</colgroup>
	<thead>
	<tr>
		<th scope="col" class="sun"><span>{{ this.days.[0] }}</span></th>
		<th scope="col"><span>{{ this.days.[1] }}</span></th>
		<th scope="col"><span>{{ this.days.[2] }}</span></th>
		<th scope="col"><span>{{ this.days.[3] }}</span></th>
		<th scope="col"><span>{{ this.days.[4] }}</span></th>
		<th scope="col"><span>{{ this.days.[5] }}</span></th>
		<th scope="col" class="sat"><span>{{ this.days.[6] }}</span></th>
	</tr>
	</thead>
	<tbody>
	{{#each this.weeks}}
		<tr>
			{{#each this}}
				<td class="{{#if this.today}}today{{/if}} {{ this.time }}">
					<span class="date">{{ this.date }}</span>
				</td>
			{{/each}}
		</tr>
	{{/each}}
	</tbody>
</table>
{{#each this.list}}
	<li class="item" data-online-prod-sn="{{ this.onlineProdSn }}" data-index="{{@index}}">
		<div class="product_box">
			<a href="{{ productDetailPath this.onlineProdSn }}">
				<div class="visual_section">
					<img src="{{ this.onlineProdImages.[0].imgUrl }}" alt="">
					{{#if this.onlineProdImages.[1].imgUrl}}
						<img src="{{ this.onlineProdImages.[1].imgUrl }}" alt="">
					{{else}}
						<img src="{{ this.onlineProdImages.[0].imgUrl }}" alt="">
					{{/if}}
					<div class="benefit">
						{{#xif this.onlineProdGift.giftProds '>' 0}}
							<span class="special">스페셜기프트</span>
						{{/xif}}
						{{#xif this.onlineProdGift.giftcardTargetYn '==' 'Y'}}
							<span class="gift">기프트카드</span>
						{{/xif}}
					</div>
					{{#xif this.saleDisplayStatus '==' 'OutOfStock'}}
						<div class="soldout">
							<span>일시품절</span>
						</div>
					{{/xif}}
				</div>
				<div class="info_section">
					<p class="txt_name">{{ this.products.[0].brandName }}</p>
					<p class="txt_summary ellipsis line2">{{ this.onlineProdName }}</p>
					<div class="price_atc">
						{{#with (calc this.onlineProdPriceSummary.minOnlineSalePriceDiscountRate '+' this.onlineProdPriceSummary.minMemberLevelDiscountRate '+' this.onlineProdPriceSummary.minOnlineMemberDiscountRate '+' this.onlineProdPriceSummary.minImmedDiscountRate) as |minRate|}}
							{{#with (calc ../onlineProdPriceSummary.maxOnlineSalePriceDiscountRate '+' ../onlineProdPriceSummary.maxMemberLevelDiscountRate '+' ../onlineProdPriceSummary.maxOnlineMemberDiscountRate '+' this.onlineProdPriceSummary.maxImmedDiscountRate) as |maxRate|}}
								{{#xif maxRate '>' 0}}
									<span class="txt_sale">{{ maxRate }}%</span>
								{{/xif}}
							{{/with}}
						{{/with}}
						<span class="txt_price"><em>{{ numberFormat this.onlineProdPriceSummary.minOnlineMemberDiscountPrice }}</em>원{{#xif this.onlineProdPriceSummary.minOnlineSalePrice '!=' this.onlineProdPriceSummary.maxOnlineSalePrice}}~{{/xif}}</span>
						{{#xif this.onlineProdPriceSummary.doublePriceDisplayYn '==' 'Y'}}
							<del class="txt_del">{{ numberFormat this.onlineProdPriceSummary.minBeforeOnlineSalePrice }}원</del>
						{{/xif}}
					</div>
					<div class="user_atc">
						<span class="mark_star_sm star{{ this.reviewScopeAvg }}"><span class="sr_only">구매 평점 별 5개 중 {{ this.reviewScopeAvg }}개</span></span>
						<span class="txt_review">리뷰 {{ numberFormat this.reviewCount }}</span>
					</div>
				</div>
			</a>
			<div class="work_box">
				<ul class="item_user">
					<li>
						<a href="#none" role="button" class="like">
							<i class="ico_favorite"></i>
							<span class="sr_only">좋아요</span>
						</a>
					</li>
					<li>
						<a href="#none" role="button" class="cart">
							<i class="ico_basket"></i>
							<span class="sr_only">장바구니</span>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</li>
{{/each}}
{{#each list}}
	<li class="item" data-online-prod-sn="{{ this.onlineProdSn }}" data-index="{{@index}}">
		<div class="{{#xif ../displayMenuId '==' 'specialGift'}}product_one_view thumb{{else}}product_new{{/xif}}">
			<a href="{{ productDetailPath this.onlineProdSn }}">
				<span class="product_visual_new">
					<span class="lazy_load_wrap">
						<img src="" data-src="{{ this.onlineProdImages.[0].imgUrl }}" alt="{{ this.onlineProdName }}" class="lazy_load">
					</span>
				</span>

				<span class="one_thumb_wrap">
					<em class="ico_thumb01"></em>
					<span class="one_thumb_list01">
						{{#each this.onlineProdGift.giftProds}}
						<span class="img_thumb01">
							<span class="lazy_load_wrap">
								<!--<a href="{{ productDetailPath ../onlineProdSn this.prodSn }}">-->
									<img src="" data-src="{{ absolutePath this.repImgUrl }}" alt="{{ this.prodName }}" class="lazy_load">
								<!--</a>-->
							</span>
						</span>
						{{/each}}
					</span>
				</span>

				<span class="product_info_new">
					<span class="prd_name">{{ this.onlineProdName }}</span>
					<span class="price_wrap">
						{{#xif this.onlineProdPriceSummary.maxFinalDiscountRate '>' 0}}
							<strong class="discount">{{ this.onlineProdPriceSummary.maxFinalDiscountRate }}%</strong>
						{{/xif}}
						<strong class="price">{{ numberFormat this.onlineProdPriceSummary.maxFinalDiscountOnlinePrice }}<em>원</em>{{#xif this.onlineProdPriceSummary.minOnlineSalePrice '!=' this.onlineProdPriceSummary.maxOnlineSalePrice}}~{{/xif}}</strong>
						{{#xif this.onlineProdPriceSummary.doublePriceDisplayYn '==' 'Y'}}
							<del>{{ numberFormat this.onlineProdPriceSummary.maxFinalDiscountBeforeSalePrice }}원</del>
						{{/xif}}
					</span>

					<span class="product_rating">
						<span class="mark_star_sm star{{ this.reviewScopeAvg }}"><span class="sr_only">구매 평점 별 5개 중 {{ this.reviewScopeAvg }}개</span></span>
						<span class="prd_review">리뷰 {{ numberFormat this.reviewCount }}</span>
					</span>

					<button type="button" class="btn_toggle like_btn"><i class="ico_heart_s {{#xif this.shoppingMarkExistYn '==' 'Y'}}on{{/xif}}"></i><span class="sr_only">좋아요</span></button>
				</span>
				<span class="tags">
					{{#xif this.onlineProdGift.giftProds '>' 0}}
						<em class="badge special">스페셜기프트</em>
					{{/xif}}
					{{#xif this.onlineProdGift.giftcardTargetYn '==' 'Y'}}
						<em class="badge gift">기프트카드</em>
					{{/xif}}
				</span>
			</a>
		</div>
	</li>
{{/each}}
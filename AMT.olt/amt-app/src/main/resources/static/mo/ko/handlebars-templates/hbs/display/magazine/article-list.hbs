
{{#if this.articleList.length}}
	{{#each this.articleList}}
	<li>
		<a href="{{ articleDetailPath this.articleSn }}">
			{{#if (eq this.articleCateId 'aTrendOnAir')}}
			<span class="thumb video">
			{{/if}}
			{{#if (ne this.articleCateId 'aTrendOnAir')}}
			<span class="thumb">
			{{/if}}
				<img src="{{ absolutePath this.bannerImgM1 }}" alt="">
			</span>
			<span class="info">
				<b class="title ellipsis">{{ this.articleTitle }}</b>
				<span class="exp ellipsis">{{ this.lineDesc }}</span>
				{{#if (eq this.articleCateId 'aTrendOnAir')}}
					<small>{{ this.writer }}</small>
				{{/if}}
				<span class="comment"><i class="ico_review"></i> <b class="num">{{ this.articleRecommendCnt }}</b></span>
			</span>
		</a>
	</li>
	{{/each}}
{{/if}}


	



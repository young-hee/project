    <div class="layer_dimmed"></div>
    <div class="layer_wrap {{ this.wrapperClass }} {{ getModalSizeClassName this.sizeType }}" tabindex="0" style="display:block">
        <dl class="layer{{#xif this.fixed '==' true}} fixed{{/xif}}">
            {{!-- contents --}}
            {{{ include this.templateKey this.templateModel }}}
        </dl>
        {{#if this.btnHtnml}}{{{this.btnHtnml}}}{{/if}}
		<button class="layer_close" type="button"><i class="ico_close_l"></i><span class="sr_only">레이어 닫기</span></button>
    </div>
</div>
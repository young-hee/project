{{!-- 동시구매 이벤트 상품그룹 --}}
{{#each this}}
<div class="theme_set ico_set" data-promoSn="{{this.promoSn}}">
	<p class="title"><!--/* 20180511 : 혜택적용 추가 */-->
		<b>{{promoName}}</b><br>
		<small class="benefit notApply">혜택미적용</small>
		<small class="benefit apply" style="display: none;"><em>혜택적용</em></small>
	</p>
	
	{{#each this.promoGrpList}}
		{{#for this.ordQty}}
			<!--/* 상품 */-->
			<div class="goods_box empty" data-promo-grop-sn="{{../sameTimePurProdGrpSn}}">
				<div class="table_layout empty"><!--/* 상품 선택전 화면 : class 'empty' 사용 */-->
					<div class="thumb"><span></span></div>
					<div class="goods_info">
						<p class="name">{{../grpTitle}}에서 상품 1개를 선택해 주세요.</p><!--/*20180615: 문구수정*/-->
						<div class="page_btns">
							<button class="btn_sm_neutral" type="button">상품선택</button>
						</div>
					</div>
				</div>
			</div>
		{{/for}}
	{{/each}}
	
	<!--/* 묶음 합계 
	<div class="set_total clear">
		<p>합계</p>
		<p class="price">
			<strong class="num">0</strong><span>원</span>
		</p>
	</div>
	*/-->
</div>	
{{/each}}
<div class="product">
	<div class="thumb">
		<span class="check_wrap" style="display: none">
			{{#xif prod.ordHistProdTypeCode '===' 'BulkDc'}}
				<input type="checkbox" name="goods" id="{{prod.bulkDcOnlineProdCode}}" value="{{prod.bulkDcOnlineProdCode}}" onclick="selectOnlineProd(this);" {{isDisabled type step prod.rtnRequestPossibleQtySum}}>
				<label for="{{prod.bulkDcOnlineProdCode}}"><span class="sr_only">선택</span></label>
			{{else}}
				<input type="checkbox" name="goods" id="{{prod.onlineProdCode}}" value="{{prod.onlineProdCode}}" onclick="selectOnlineProd(this);" {{isDisabled type step prod.rtnRequestPossibleQtySum}}>
				<label for="{{prod.onlineProdCode}}"><span class="sr_only">선택</span></label>
			{{/xif}}
		</span>
		<img src="{{prod.onlineProdImgUrl}}">
	</div>
	<div class="info">
		{{#xif typeName '!=' null}}
			<p class="flag">{{condition (eq typeName 'a') '진주알 상품' '뷰티포인트'}}</p>
		{{/xif}}
		{{#xif prod.ordHistProdTypeCode '===' 'BulkDc'}}
			<p class="name">{{prod.bulkDcOnlineProdName}}</p>
		{{else}}
			<p class="name">{{prod.onlineProdName}}</p>
		{{/xif}}

		<p class="price"><span class="quantity">{{myOrdQty 'group' prod step type claimYn}}개</span> /
		<strong class="eng">{{currencyFormat (condition (eq prod.ordHistProdStatusCode 'ProdCancel') prod.prodCancelAmtSum prod.finalOnlineSaleAmtPcurSum)}}</strong></p>
		{{#xif prod.ordHistProdStatusCode '===' 'ProdCancel'}}
			<span class="status">
				<em>취소완료</em>
			</span>
		{{/xif}}
	</div>

</div>
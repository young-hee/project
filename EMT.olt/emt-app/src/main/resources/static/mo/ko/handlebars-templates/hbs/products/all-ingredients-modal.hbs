<div class="panel">
	<dl class="goods_detail_cont">
		<dt>상품명</dt>
		<dd>
			{{ this.onlineProd.onlineProdName }}
			
			{{#xif this.onliproductCount '>' 1}}
				<div class="select_wrap">
					<select name="" id="">
						{{#each this.onlineProd.products}}
							<option value="{{ this.prodSn }}" {{#xif ../selectedData.prodSn '==' this.prodSn }}selected="selected"{{/xif}} >{{ this.prodName }}</option>
						{{/each}}
					</select>
				</div>
			{{else}}
				{{#xif this.onlineProd.onlineProdName '!=' this.onlineProd.products.0.prodName}}
					<p> {{this.onlineProd.products.0.prodName}} </p>
				{{/xif}}
			{{/xif}}
		</dd>

		{{#each this.products}}
			{{#each this.disclosures}}
				<dt class="disclosure" data-prodSn="{{../prodSn}}" {{#xif ../../selectedData.prodSn '!=' ../prodSn }}style="display:none;"{{/xif}} >{{ this.disclosureItemName }}</dt>
				<dd class="disclosure" data-prodSn="{{../prodSn}}" {{#xif ../../selectedData.prodSn '!=' ../prodSn }}style="display:none;"{{/xif}} >{{ this.prodDisclosureInfo }}</dd>
			{{/each}}
		{{/each}}
	</dl>
</div>
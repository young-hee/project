{{!--
	베스트
--}}
{{#if this.onlineProdList.totalCount }}
	<div class="ix-list-viewport">
		<ul class="ix-list-items">
			{{#each this.onlineProdList.list}}
				<li class="ix-list-item">
					<a href="{{ productDetailPath this.onlineProdSn this.prodSn }}">
					{{#xif this.rank '>' 9}}
						<span class="grade">{{ numberCipher this.rank 2 }}
					{{else}}
						<span class="grade">{{ numberCipher this.rank 1 }}
					{{/xif}}
						{{#xif this.rankChange '!=' 0}}
							<span class="{{#xif this.rankChange '>' 0}}up{{/xif}} {{#xif this.rankChange '<' 0}}down{{/xif}}">{{ this.rankChange }}</span></span>
						{{/xif}}
						<span>
							<span class="item_title">{{ this.products.0.prodName }}</span>
							<span class="price"><b>{{ numberFormat this.products.0.prodPriceSummary.onlineSalePrice }}</b> 원</span>
						</span>
						<span class="img">
							{{#xif this.saleDisplayStatus '==' 'OutOfStock'}}
									<div class="item_state out_of_stock">일시품절</div>
							{{/xif}}
							<img src="{{ replaceImagePath this.prodImages.0.imgUrl 210 210 }}" alt="">
						</span>
					</a>
				</li>
			{{/each}}
		</ul>
	</div>
{{else}}
	<div class="panel notice">
		<i class="ico"></i>
		<p class="text">베스트 상품이 존재하지 않습니다.</p>
	</div>
{{/if}}

    			<div class="panel gray">
    				{{#each compareList}}
    					{{#xif addedPayYn '===' 'N'}}
    						<dl class="table_layout">
								<dt><b>{{payMethodNameBlang}}</b></dt>
								<dd class="align_right">{{currencyFormatDefault (calc beforePayAmt '-' afterPayAmt) '원'}}</dd>
							</dl>
    					{{/xif}}
    				{{/each}}
    			</div>
    		</dd>
    		{{#xif step '===' 2}}
    			{{#each compareList}}

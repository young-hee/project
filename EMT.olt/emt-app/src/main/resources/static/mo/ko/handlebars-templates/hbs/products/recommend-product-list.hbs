{{!--
	다른 고객들이 많이 찾은 상품 목록 (small slide)
--}}
<div class="ix-list-viewport">
	<ul class="ix-list-items">
		{{#each this.list}}
			<li class="ix-list-item item">
				<a href="{{ productDetailPath this.onlineProdSn }}">
					<div class="thumb">
						<img src="{{ this.onlineProdImages.0.imgUrl }}" alt="" />
						<!--/* 일시품절일경우 */-->
						{{{stockImg this.saleDisplayStatus this.prodTypeCode }}}		
					</div>
					<div class="item_info">
						<div>
							<p class="prd_name">{{ this.onlineProdName }}</p>
							<p class="color_name">
								{{#if this.colorGroups}}
									{{#xif this.productCount '>' 1}}
										{{this.productCount}} colors
									{{/xif}}
								{{/if}}
							</p>
						</div>
						<div class="price_area">
							<span class="discount"> 
							{{#xif this.this.onlineProdPriceSummary.minOnlineSalePriceDiscountRate '!=' 0}}
								{{ numberFormat this.onlineProdPriceSummary.minOnlineSalePriceDiscountRate}}<em>%</em>
							{{/xif}}
							</span>
							<span class="price">
								{{ numberFormat this.onlineProdPriceSummary.minOnlineSalePrice }}<em>원</em>
							</span>
						</div>
					</div>
				</a>
			</li>
		{{/each}}
	</ul>
</div>
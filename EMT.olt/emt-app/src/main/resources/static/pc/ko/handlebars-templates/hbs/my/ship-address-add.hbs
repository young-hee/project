		<input type="hidden" name="updateYn" id="updateYn">
	</form>


	<div class="page_btns">
		<button type="button"
			class="btn_lg_secondary" onclick="hideLayer()">취소</button>
		<button type="button" class="btn_lg_primary"
			onclick="sendForm()">등록</button>

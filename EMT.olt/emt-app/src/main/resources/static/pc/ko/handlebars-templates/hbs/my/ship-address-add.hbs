					<dd class="ui_find_addresses">

						<div
							class="w100p input_btn_wrap">
							<div class="input_wrap">
								<input type="text"
									class="address_keyword"
									title="지역명 입력"
									placeholder="지역명">
							</div>
							<button type="button" class="btn_md_form btn_address_find">찾기</button>
						</div>

						<div
							class="input_group w100p">
							<span
								class="input_wrap w25p"><input
								type="text"
								class="post_code"
								title="우편번호 입력"
								placeholder="우편번호"
								id="addresseeAddress.zipCode"
								name="addresseeAddress.zipCode"
								value="{{result.addresseeAddress.zipCode}}"
								readonly></span> <span
								class="gap">&nbsp;</span>
							<span class="input_wrap"><input
								type="text"
								class="address_first"
								title="기본주소 입력"
								placeholder="기본주소"
								id="addresseeAddress.address1"
								name="addresseeAddress.address1"
								value="{{result.addresseeAddress.address1}}"
								required="required"
								data-msg-required="주소를 입력해주세요."
								readonly></span>
						</div>
						<div
							class="input_wrap w100p">
							<input type="text"
								class="address_last"
								title="상세주소 입력"
								placeholder="상세주소"
								id="addresseeAddress.address2"
								name="addresseeAddress.address2"
								value="{{result.addresseeAddress.address2}}" />
						</div>
					</dd>

				</dl>
			</div>
			<div class="check_set">
				<span class="check_wrap"><input
					type="checkbox" id="check1"><label
					for="check1">회원기본정보의 주소를

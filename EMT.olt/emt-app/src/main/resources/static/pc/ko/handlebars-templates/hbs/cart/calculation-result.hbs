				{{#xif memberSn '>' 0 }}
					{{#xif cartEx.calculationResult.storePickupProdSaleTotalAmountInfo.standardCurrency.amount '>' 0 }}
					<dl>
						<dt>뷰티포인트 상품(<em id="calBpCnt">0</em>개)</dt>
						<dd>0 원</dd>
					</dl>
					{{/xif}}
				{{/xif}}
--}}
			</dd>
		</dl>
		{{/xif}}

		{{#xif cartEx.calculationResult.shipFeeSumInfo.standardCurrency.amount '>' 0 }}
		<dl>
			<dt><b>배송비</b></dt>
			<dd>
				<span class="price">
					<strong>{{numberFormat cartEx.calculationResult.shipFeeSumInfo.standardCurrency.amount }}</strong><b>원</b>
				</span>
			</dd>
		</dl>
		{{/xif}}


		{{#if (or (gt cartEx.calculationResult.totalProdUnitDiscountAmountInfo.standardCurrency.amount 0)(gt cartEx.calculationResult.exchIPointSum 0)(gt cartEx.calculationResult.exchAPointSum 0) ) }}
		<dl>
			<dt><b>총 할인</b></dt>
			{{#if (gt cartEx.calculationResult.totalProdUnitDiscountAmountInfo.standardCurrency.amount 0) }}
			<dd>
				<span class="price">
					<strong>{{numberFormat cartEx.calculationResult.totalProdUnitDiscountAmountInfo.standardCurrency.amount }}</strong><b>원</b>
				</span>
			</dd>
			{{/if}}

			{{#if (or (gt cartEx.calculationResult.exchIPointSum 0) (gt cartEx.calculationResult.exchAPointSum 0)) }}
			<dd>
				<span class="price">
					<strong>{{numberFormat (calc cartEx.calculationResult.exchIPointSum '+' cartEx.calculationResult.exchAPointSum) }}</strong>
					<b>{{condition (gt cartEx.calculationResult.exchAPointSum 0)'알' 'P'}}</b>
				</span>
			</dd>
			{{/if}}
			<dd>
				{{#xif cartEx.calculationResult.dsicountAmountInfoByOnlineProdDc.standardCurrency.amount '>' 0 }}
				<dl>
					<dt>상품할인 적용</dt>
					<dd>{{numberFormat cartEx.calculationResult.dsicountAmountInfoByOnlineProdDc.standardCurrency.amount }}원</dd>
				</dl>
				{{/xif}}

				{{#xif cartEx.calculationResult.dsicountAmountInfoByOnlineMemberDc.standardCurrency.amount '>' 0 }}
				<dl>
					<dt>회원할인 적용</dt>{{!-- 회원등급할인 적용 포함 --}}
					<dd>{{numberFormat cartEx.calculationResult.dsicountAmountInfoByOnlineMemberDc.standardCurrency.amount }}원</dd>
				</dl>
				{{/xif}}

				{{#xif cartEx.calculationResult.dsicountAmountInfoByinstantCouponDc.standardCurrency.amount '>' 0 }}
				<dl>
					<dt>즉시쿠폰 적용</dt>
					<dd>{{numberFormat cartEx.calculationResult.dsicountAmountInfoByinstantCouponDc.standardCurrency.amount }}원</dd>
				</dl>
				{{/xif}}

                {{#xif cartEx.calculationResult.discountAmountInfoByMNPromotion.standardCurrency.amount '>' 0 }}
				<dl>
					<dt>M+N 행사 할인</dt>
					<dd>{{numberFormat cartEx.calculationResult.discountAmountInfoByMNPromotion.standardCurrency.amount }}원</dd>
				</dl>
				{{/xif}}

				{{#xif cartEx.calculationResult.exchIPointSum '>' 0 }}
				<dl>
					<dt>뷰티포인트 교환사용</dt>
					<dd>{{numberFormat cartEx.calculationResult.exchIPointSum }}P</dd>
				</dl>
				{{/xif}}

				{{#xif cartEx.calculationResult.exchAPointSum '>' 0 }}
				<dl>
					<dt>진주알 교환사용</dt>
					<dd>{{numberFormat cartEx.calculationResult.exchAPointSum }}알</dd>
				</dl>
				{{/xif}}
			</dd>
		</dl>
		{{/if}}
	</div>
</div>